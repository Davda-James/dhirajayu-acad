generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String        @id @default(cuid())
  firebase_uid String        @unique
  session_id   String        @unique
  device_id    String        
  email        String        @unique
  role         Role          @default(USER)
  last_login   DateTime      @default(now())
  created_at   DateTime      @default(now())
  enrollments  Enrollments[]
  orders       Orders[]
}

enum Role {
  ADMIN
  USER
}

model Courses {
  id           String        @id @default(cuid())
  title        String
  description  String
  is_paid      Boolean
  price        Int?
  thumbnail_id String?
  published    Boolean       @default(false)
  created_at   DateTime      @default(now())
  updated_at   DateTime      @updatedAt
  enrollments  Enrollments[]
  modules      Modules[]
  mediaUsages  MediaUsage[]
  orders       Orders[]
  thumbnail    MediaAsset?   @relation(fields: [thumbnail_id], references: [id], onDelete: SetNull)
}

model Modules {
  id            String         @id @default(cuid())
  course_id     String
  title         String
  course        Courses        @relation(fields: [course_id], references: [id], onDelete: Cascade)
  ModuleFolders ModuleFolder[]
  mediaUsages   MediaUsage[]

  @@unique([course_id, title])
  @@index([course_id])
}

model ModuleFolder {
  id          String       @id @default(cuid())
  module_id   String
  title       String
  description String?
  parent_id   String?
  created_at  DateTime     @default(now())
  updated_at  DateTime     @updatedAt
  module      Modules      @relation(fields: [module_id], references: [id], onDelete: Cascade)
  mediaUsages MediaUsage[]

  parent   ModuleFolder?  @relation("FolderHierarchy", fields: [parent_id], references: [id])
  children ModuleFolder[] @relation("FolderHierarchy")

  @@index([module_id])
  @@index([parent_id])
}

model MediaUsage {
  id               String       @id @default(cuid())
  media_id         String
  course_id        String
  module_id        String
  module_folder_id String
  title            String
  description      String?
  order            Int          @default(0)
  course           Courses      @relation(fields: [course_id], references: [id], onDelete: Cascade)
  module           Modules      @relation(fields: [module_id], references: [id], onDelete: Cascade)
  folder           ModuleFolder @relation(fields: [module_folder_id], references: [id], onDelete: Cascade)
  media_asset      MediaAsset   @relation(fields: [media_id], references: [id], onDelete: Restrict)
  created_at       DateTime     @default(now())
  updated_at       DateTime     @updatedAt

  @@index([media_id])
  @@index([course_id])
  @@index([module_id])
  @@index([module_folder_id])
  @@index([order])
}

model MediaAsset {
  id              String       @id @default(cuid())
  file_name       String
  file_size       BigInt
  mime_type       String
  media_path      String       @unique
  type            MediaType
  duration        Int?
  status          MediaStatus  @default(PENDING)
  is_free_preview Boolean      @default(false)
  created_at      DateTime     @default(now())
  updated_at      DateTime     @updatedAt
  mediaUsages     MediaUsage[]
  courses         Courses[]

  @@index([type])
  @@index([status])
}

enum MediaType {
  VIDEO
  AUDIO
  DOCUMENT
  IMAGE
}

enum MediaStatus {
  PENDING
  FAILED
  DELETED
  ACTIVE
}

model Payments {
  id         String        @id @default(cuid())
  order_id   String
  payment_id String        @unique
  status     PaymentStatus
  paid_at    DateTime?
  order      Orders        @relation(fields: [order_id], references: [order_id], onDelete: Cascade)
}

enum PaymentStatus {
  SUCCESS
  FAILED
}

model Orders {
  id         String      @id @default(cuid())
  user_id    String
  course_id  String
  amount     Int
  currency   String      @default("INR")
  order_id   String      @unique
  status     OrderStatus @default(CREATED)
  created_at DateTime    @default(now())
  user       User        @relation(fields: [user_id], references: [id])
  course     Courses     @relation(fields: [course_id], references: [id])
  payments   Payments[]
}

enum OrderStatus {
  CREATED
  PAID
  CANCELLED
}

model Enrollments {
  id          String   @id @default(cuid())
  user_id     String
  course_id   String
  enrolled_at DateTime @default(now())
  user        User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
  course      Courses  @relation(fields: [course_id], references: [id], onDelete: Cascade)

  @@unique([user_id, course_id])
}
